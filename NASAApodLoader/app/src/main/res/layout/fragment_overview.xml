<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.android.nasaapod.overview.OverviewViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.nasaapod.MainActivity">

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="252dp"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="@string/input_image_number_1_400"
            android:inputType="number"
            android:text="@={viewModel.viewcount}"
            android:visibility="@{viewModel.iscountfilter == true ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="126dp"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="start date YYYY-MM-DD"
            android:inputType="date"
            android:text="@={viewModel.startdate}"
            android:visibility="@{viewModel.iscountfilter == false ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextDate2"
            android:layout_width="126dp"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="end date YYYY-MM-DD"
            android:inputType="date"
            android:text="@={viewModel.enddate}"
            android:visibility="@{viewModel.iscountfilter == false ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintStart_toEndOf="@+id/editTextDate"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="91dp"
            android:layout_height="38dp"
            android:onClick="@{() -> viewModel.updateApodView()}"
            android:text="@string/submit"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/editTextNumber"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_width="406dp"
            android:layout_height="723dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photos_grid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:padding="6dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:listData="@{viewModel.properties}"
                app:spanCount="2"
                tools:itemCount="16"
                tools:listitem="@layout/list_view_item" />

            <ImageView
                android:id="@+id/status_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:nasaApiStatus="@{viewModel.status}" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>